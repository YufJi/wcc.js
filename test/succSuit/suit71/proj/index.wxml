<view z="{{fo}}">{{text}}</view>
<block wx:for="{{array}}" wx:for-index="idx" wx:for-item="itemName">
    <swiper class="{{className}}" indicator-dots="false" indicator-color="rgba(0,0,0,.3)" autoplay="false" 
      current="0" current-item-id="id" interval="5000" duration="1000" circular="false" vertical="false" 
    previous-margin="false" next-margin="0px" display-multiple-items="1" skip-hidden-item-layout="false" bindchange="bindchange" bindanimationfinish="bindanimationfinish">
      <view>{{tools.addOne(idx)}}:{{itemName}}</view>
    </swiper>
</block>

<wxs src="./tools.wxs" module="tools"></wxs>